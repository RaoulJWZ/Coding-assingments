#include <iostream>

using namespace std;

void formuleEvenNumber(int number);
void formuleOddNumber(int number);

int userNumber;

int main()
{
    cout << "type a number." << endl;
    cin >> userNumber;
    if(userNumber % 2 == 0)
        formuleEvenNumber(userNumber);
    if(userNumber % 2 != 0)
        formuleOddNumber(userNumber);



}

void formuleEvenNumber(int number)
{
    double sum = 0;
    number -= 2;
    for(double i = 0; i <= number; i = i+2){
        sum = sum + (i+1) / (i+2);
    }
    cout << "The number is even, so the answer is " << sum << endl;
}

void formuleOddNumber(int number)
{
    double sum = 0;
    number -= 2;
    for(double i = 0; i <= number; i = i+2){
        sum = sum + (i+1) /(i+2);
    }
    number += 2;
    sum = sum * number;
    cout << "The number is odd, so the answer is " << sum << endl;
}
